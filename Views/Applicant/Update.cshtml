@model HospitalProject.Models.ApplicantModel

@{
    ViewBag.Title = "Update";
}

<h2>Update @Model.ApplicantFirstName @Model.ApplicantLastName</h2>
<div class="container">
    <form method="POST" action="/Applicant/Update/@Model.ApplicantID">
        <div class="form-group">
            <label for="ApplicantFirstName">First Name:</label>
            <input type="text" class="form-control" value="@Model.ApplicantFirstName" placeholder="First Name" name="ApplicantFirstName" id="ApplicantFirstName">
        </div>
        <div class="form-group">
            <label for="ApplicantLastName">Last Name:</label>
            <input type="text" class="form-control" value="@Model.ApplicantLastName" placeholder="Last Name" id="ApplicantLastName" name="ApplicantLastName">
        </div>
        <div class="form-group">
            <label for="ApplicantAddress">Address:</label>
            <textarea class="form-control" rows="5" id="ApplicantAddress" name="ApplicantAddress">@Model.ApplicantAddress</textarea>
        </div>
        <div class="form-group">
            <label for="ApplicantEmail">Email:</label>
            <input type="email" class="form-control" value="@Model.ApplicantEmail" placeholder="example@example.com" id="ApplicantEmail" name="ApplicantEmail">
        </div>
        <div class="form-group">
            <label for="ApplicantPhone">Phone:</label>
            <input type="text" class="form-control" value=@Model.ApplicantPhone placeholder="9234567890" id="ApplicantPhone" name="ApplicantPhone">
        </div>
        <div class="form-group">
            <label for="ApplicantEducationSummary">Education Summary:</label>
            <textarea class="form-control" rows="5" id="ApplicantEducationSummary" name="ApplicantEducationSummary">@Model.ApplicantEducationSummary</textarea>
        </div>
        <div class="form-group">
            <label for="ApplicantWorkExperience">Work Experience:</label>
            <textarea class="form-control" rows="5" id="ApplicantWorkExperience" name="ApplicantWorkExperience">@Model.ApplicantWorkExperience</textarea>
        </div>
        <div class="form-group">
            <label for="ApplicantSkills">Skills:</label>
            <textarea class="form-control" rows="5" id="ApplicantSkills" name="ApplicantSkills">@Model.ApplicantSkills</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

