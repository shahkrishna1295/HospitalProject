@model HospitalProject.Models.TestimonialModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="navbar">
        <a class="navbar-link" href="/Testimonial/VisitorView">Back to List</a>
    </div>

    <form action="/Testimonial/Create" method="post">
        <div class="form-horizontal">
            <div>
                <label>Title : </label>
                <input type="text" name="TestimonialTitle" id="TestimonialTitle" />
            </div>
            <div>
                <label>Name of Patient : </label>
                <input type="text" name="NameOfPatient" id="NameOfPatient" />
            </div>
            <div>
                <label>Message : </label>
                <input type="text" name="TestimonialMessage" id="TestimonialMessage" />
            </div>
            <div>
                <label>Image : </label>
                <input type="file" name="testimonialImage" id="testimonialImage" />
            </div>
            <div>
                <input class="btn btn-primary" type="submit" value="Submit Testimonial" />
            </div>
        </div>
    </form>
}
