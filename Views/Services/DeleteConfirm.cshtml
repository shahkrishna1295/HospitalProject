@model HospitalProject.Models.ServiceModel
@{
    ViewBag.Title = "DeleteConfirm";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h2 class="text-danger">Are you sure you want to delete @Model.ServiceTitle? </h2>
    </div>
    <div class="col-sm-2">
        <a class="btn btn-primary" href="/Service/List">Cancel</a>
    </div>
    <div class="col-sm-2">
        <form method="POST" action="/Testimonial/Delete/@Model.ServiceID">
            <div><input class="btn btn-primary" type="submit" value="Confirm" /></div>
        </form>
    </div>

}


