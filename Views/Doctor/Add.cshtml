@model List<HospitalProject.Models.Speciality>

@{
    ViewBag.Title = "Add";
}

<h2>Add Doctor</h2>
<form method="post" action="/Doctor/Add">
    <div class="form-group">
        <label>Doctor Firstname:</label>
        <input type="text" id="DocFname" name="DocFirstname" class="form-control" placeholder="Enter first name"/>
    </div>
    <div class="form-group">
        <label>Doctor Lastname:</label>
        <input type="text" id="DocLname" name="DocLastname" class="form-control" placeholder="Enter last name" />
    </div>
    <div class="form-group">
        <label>Email:</label>
        <input type="text" id="DocEmail" name="DocEmailAddr" class="form-control" placeholder="Enter email"/>
    </div>
    <div class="form-group">
        <label>Hospital available in:</label>
        <select id="DocLoc" name="DocLocation" class="form-control">
            <option value="0">Select a hospital</option>
            <option value="1">Bingham Memorial Hospital</option>
            <option value="2">Anson General Hospital</option>
            <option value="3">Lady Minto Hospital</option>
        </select>
    </div>
    <div class="form-group">
        <fieldset>
            <legend>Specialities</legend>
            <div class="container">
                <div class="container Specialities">

                    @{
                        foreach (var speciality in Model)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@speciality.SpecialityID" id="speciality-@speciality.SpecialityID" name="speciality">
                                <label class="form-check-label" for="speciality-@speciality.SpecialityID">
                                    @speciality.SpecialityName
                                </label>
                            </div>   
                        }
                    }
                    
                </div>
                <div class="Vl"></div>
                <div class="container form-inline">
                    <a href="/Speciality/Add" class="btn btn-lg btn-primary">Add New Speciality</a>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="form-group">
        <input type="submit" id="AddDoctor" name="AddDoctor" value="Submit" class="btn btn-lg btn-primary" />
    </div>
</form>

